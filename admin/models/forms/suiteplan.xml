<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="building_id"
				type="building"
				query="SELECT id, name FROM #__parkway_buildings" key_field="id" value_field="name"
                                label="COM_PARKWAY_SUITEPLAN_BUILDINGID_LABEL"
				description="COM_PARKWAY_SUITEPLAN_BUILDINGID_DESC"
				size=""
				class=""
				default=""
				>
                                <option value="">Choose One</option>
                </field>
                
                <field
				name="floorplan_id"
				type="sql"
				query="SELECT id, title as floorplan_title FROM #__parkway_floorplans" key_field="id" value_field="floorplan_title"
                                label="COM_PARKWAY_SUITEPLAN_FLOORPLANID_LABEL"
				description="COM_PARKWAY_SUITEPLAN_FLOORPLANID_DESC"
				size=""
				class=""
				default=""
				>
                                <option value="">Choose One</option>
                </field>
                                
                <field
				name="title"
				type="text"
				label="COM_PARKWAY_SUITEPLAN_TITLE_LABEL"
				description="COM_PARKWAY_SUITEPLAN_TITLE_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
                <field
				name="image"
				type="file"
				label="COM_PARKWAY_SUITEPLAN_IMAGE_LABEL"
				description="COM_PARKWAY_SUITEPLAN_IMAGE_DESC"
				size=""
                                accept="image/*"
				class="file"
				default=""
				/>
               
			
                
                
                
                
                
	</fieldset>
</form>

